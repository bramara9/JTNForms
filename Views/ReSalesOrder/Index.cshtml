@model List<WindowDetails>

@{
    var cId = ViewBag.CutomerId;
    var BlindTypes = ViewBag.BlindTypes;
    var ControlTypes = ViewBag.ControlTypes;
    var ControlPositions = ViewBag.ControlPositions;
    var StackTypes = ViewBag.StackTypes;
}
